	"Framework7": true,
	"app": true,
	"i18next": true,
	"Template7": true,
	"keyPartCommon": true,
	"mqttLib": true,
	"mainView": true,

	// window对象挂载变量
	"console":true, 
	"window":true, 
	"clearTimeout": true,
	"clearInterval": true,
	"sessionStorage": true,
	"setTimeout": true,
	"setInterval": true,
	"document": true,
	"localStorage":true,
	"location": true,
	"navigator": true,

